<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="580.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomersFormController">
   <children>
      <Label fx:id="titleLbl" layoutX="14.0" layoutY="25.0" prefHeight="35.0" prefWidth="335.0" text="Customer">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox layoutX="26.0" layoutY="84.0" prefHeight="489.0" prefWidth="560.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <Label maxWidth="-Infinity" prefWidth="100.0" text="Customer ID">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldId" disable="true" editable="false" promptText="Auto-generated ID" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="63.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <Label maxWidth="-Infinity" prefWidth="100.0" text="Name">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldName" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="73.0" prefHeight="63.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <Label maxWidth="-Infinity" prefWidth="100.0" text="Address">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldAddress" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="136.0" prefHeight="63.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <Label maxWidth="-Infinity" prefWidth="100.0" text="Postal Code">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldPostal" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="199.0" prefHeight="63.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <Label maxWidth="-Infinity" prefHeight="20.0" prefWidth="100.0" text="Phone Number">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="fieldPhone" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="262.0" prefHeight="63.0" prefWidth="560.0" spacing="20.0">
               <children>
                  <Label maxWidth="-Infinity" prefHeight="20.0" prefWidth="61.0" text="Country">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="comboCountry" onAction="#onActionCountry" prefHeight="25.0" prefWidth="130.0" promptText="Select Country" />
                  <Label layoutX="15.0" layoutY="32.0" maxWidth="-Infinity" prefHeight="20.0" prefWidth="149.0" text=" Administrative Division">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="comboDivision" disable="true" layoutX="120.0" layoutY="29.0" prefHeight="25.0" prefWidth="130.0" promptText="Choose Country" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" layoutX="10.0" layoutY="199.0" prefHeight="63.0" prefWidth="560.0" spacing="25.0">
               <padding>
                  <Insets left="5.0" right="20.0" />
               </padding>
               <children>
                  <Button fx:id="cancelBtn" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onActionCancel" prefWidth="60.0" text="Cancel" />
                  <Button fx:id="saveBtn" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onActionSave" prefWidth="60.0" text="Save" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
